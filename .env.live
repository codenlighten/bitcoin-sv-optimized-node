# Bitcoin SV Live Network Configuration
# Copy this to .env to enable live Bitcoin SV network connectivity

# Enable live Bitcoin SV network mode (set to "true" for real network connectivity)
BITCOIN_LIVE_MODE=true

# Bitcoin SV network selection (mainnet or testnet)
BITCOIN_NETWORK=testnet

# DigitalOcean deployment configuration
DIGITAL_OCEAN_TOKEN=your_token_here

# Network connectivity settings
BITCOIN_MAX_PEERS=8
BITCOIN_MIN_PEERS=3
BITCOIN_CONNECTION_TIMEOUT=10s

# Logging and monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# API Gateway settings
PORTAL_PORT=8080
ENABLE_ARC_API=true

# Production deployment settings
KUBERNETES_NAMESPACE=metamorph-live
DEPLOYMENT_ENV=production
