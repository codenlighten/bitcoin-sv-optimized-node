# Bitcoin SV Node Configuration Example
# Copy this to .env and fill in your actual values

# DigitalOcean API Token (required for deployment)
DIGITAL_OCEAN_TOKEN=your_digitalocean_token_here

# Bitcoin SV Network Configuration
BITCOIN_LIVE_MODE=false
BITCOIN_NETWORK=testnet
BITCOIN_MINING_ADDRESS=your_bitcoin_sv_address_here

# Mining Pool Configuration (optional)
BITCOIN_POOL_URL=
BITCOIN_POOL_USERNAME=
BITCOIN_POOL_PASSWORD=

# Mining Performance Settings
BITCOIN_MAX_WORKERS=8
BITCOIN_MIN_WORKERS=2
BITCOIN_MAX_PEERS=16

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
